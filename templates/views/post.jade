extends ../layouts/default

block content
	section#banner
		.container
			.row
				.blog-header.text-center
					h2= data.post.title
					if data.post.categories && data.post.categories.length
						ul.breadcrumb
							each cat in data.post.categories
								li= cat.name
	section#blog-single
		.container
			// Portfolio item slider start
			.col-lg-8.col-md-8.col-sm-12.col-xs-12
				article
					p: a(href='/blog/all') &larr; back to the blog
					hr
					if !data.post
						h2 Invalid Post.
					else
						header
							h1= data.post.title
							h5 Posted 
								if data.post.publishedDate
									| on #{data.post._.publishedDate.format('MMMM Do, YYYY')} 
								if data.post.categories && data.post.categories.length
									| in 
									each cat, cat_i in data.post.categories
										a(href='/blog/' + cat.key)= cat.name
										if cat_i < data.post.categories.length - 1
											| , 
										else
											|  
								if data.post.author
									| by #{data.post.author.name.first}
						.post
							if data.post.image.exists
								.image-wrap: img(src=data.post._.image.fit(750,450)).img-responsive
							!= data.post.content.full
				hr
				.clearfix
				.tags1
					p Tags: 
						if data.post.tags && data.post.tags.length
							each tag in data.post.tags
								a(href='#')= tag.name 
								&nbsp;
				.share1
					h4 Share this :
					ul.social-contact.list-inline
						li
							a(href='#')
								i.fa.fa-facebook
						li
							a(href='#')
								i.fa.fa-twitter
						li
							a(href='#')
								i.fa.fa-google-plus
						li
							a(href='#')
								i.fa.fa-linkedin
						li
							a(href='#')
								i.fa.fa-pinterest
				.clearfix
				hr
				.about-auther
					h4 About the Author
					hr
					.well
						img(src=data.post.author._.avatar.fit(90,90)).img-responsive
						p!= data.post.author.description
				// About auther end
				// comments start
				.comments
					h4 Comments
					hr
					if data.post.comments && data.post.comments.length
						ul.media-list
							each comment in data.post.comments
								li.media
									a.media-left(href='#')
										img.img-responsive(src='/images/team/pic5.jpg', alt='alt')
									.media-body
										h4.media-heading
											| Jhohn Milton
											span
												i 2 july 2014
										p
											| Odit nostrum et debitis reiciendis ullam quam corrupti modi, porro similique, voluptatem cumque tempore, ratione libero harum pariatur error veritatis aliquid laboriosam.
										a(href='#') Reply
				// comments End
				.blog-form
					h4
						| Leave a 
						span comment 
					hr
					.form-group
						.col-md-6
							input.form-control(type='text', placeholder='Name')
					.form-group
						.col-md-6
							input.form-control(type='email', placeholder='Email')
					.form-group
						.col-md-12
							textarea.form-control(name='comment', id='', cols='30', rows='7', placeholder='Message')
					.form-group
						.col-md-12
							.text-center
								button.btn.btn-main  Submit Now 
				// blog footer end
			// left blog part end
			// Right Blog part row start
			.row
				// sidebar start
				.col-lg-4.col-md-4.col-sm-12.col-xs-12
					.blog-sidebar
						if data.posts && data.posts.length
						.recent-post
							h4 Latest posts
							hr
							ul
								each post in data.posts
									li.col-md-12.col-sm-4
										.single-post
											a(href='/blog/post/' + post.slug)
												if post.image.url && post.image.url.length
													img(src=post._.image.fit(300,300), alt='post-img').img-responsive
												h4!= post.title
											span #{post._.publishedDate.format('MMMM Do, YYYY')}
						// Recent posts end
						.clearfix
						.blog-catagory
							h4 Blog categories
							ul
								li
									a(href='/blog/all', class=!data.category ? 'active' : false)
										i.fa.fa-angle-right
										|  All Categories
										span.badge 14
								each cat in data.categories
									li
										a(href='/blog/' + cat.key, class=data.category && data.category.id == cat.id ? 'active' : false)
											i.fa.fa-angle-right
											= cat.name
											span.badge= cat.postCount
								// blog catagory end
								.clearfix
								if data.tags.length
									.right-tags
										h4 Tags
										hr
										.footer_menu.tags
											each tag in data.tags
												a(href='/blog/all/' + tag.name)= tag.name
					// blog sidebar end
				// sidebar end
		// Portfolio item row end