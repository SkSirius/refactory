extends ../layouts/default

block content
	section#banner
		.container
			.row
				.blog-header.text-center
					h2= data.post.title
					if data.post.categories && data.post.categories.length
						ul.breadcrumb
							each cat in data.post.categories
								li= cat.name
	section#blog-single
		.container
			// Portfolio item slider start
			.col-lg-8.col-md-8.col-sm-12.col-xs-12
				article
					p: a(href='/blog/all') &larr; back to the blog
					hr
					if !data.post
						h2 Invalid Post.
					else
						header
							h1= data.post.title
							h5 Posted 
								if data.post.publishedDate
									| on #{data.post._.publishedDate.format('MMMM Do, YYYY')} 
								if data.post.categories && data.post.categories.length
									| in 
									each cat, cat_i in data.post.categories
										a(href='/blog/' + cat.key)= cat.name
										if cat_i < data.post.categories.length - 1
											| , 
										else
											|  
								if data.post.author
									| by #{data.post.author.name.first}
						.post
							if data.post.image.exists
								.image-wrap: img(src=data.post._.image.fit(750,450)).img-responsive
							!= data.post.content.full
				hr
				.clearfix
				.tags1
					p Tags: 
						if data.post.tags && data.post.tags.length
							each tag in data.post.tags
								a(href='#')= tag.name 
								&nbsp;
				.share1
					h4 Share this :
					ul.social-contact.list-inline
						li
							a(href='#')
								i.fa.fa-facebook
						li
							a(href='#')
								i.fa.fa-twitter
						li
							a(href='#')
								i.fa.fa-google-plus
						li
							a(href='#')
								i.fa.fa-linkedin
						li
							a(href='#')
								i.fa.fa-pinterest
				.clearfix
				hr
				.about-auther
					h4 About the Author
					hr
					.well
						img(src=data.post.author._.avatar.fit(90,90)).img-responsive
						p!= data.post.author.description
				// About auther end
				// comments start
				.comments
					h4 Comments
					hr
					#disqus_thread
					script.
						var disqus_config = function () {
						this.page.url = 'http://refactory.herokuapp.com/blog/post'; // Replace PAGE_URL with your page's canonical URL variable
						this.page.identifier = '#{data.post._id}'; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
						};
					
						(function() { // DON'T EDIT BELOW THIS LINE
							var d = document, s = d.createElement('script');

							s.src = '//refactory.disqus.com/embed.js';

							s.setAttribute('data-timestamp', +new Date());
							(d.head || d.body).appendChild(s);
						})();
			// left blog part end
			// Right Blog part row start
			.row
				// sidebar start
				.col-lg-4.col-md-4.col-sm-12.col-xs-12
					.blog-sidebar
						if data.posts && data.posts.length
						.recent-post
							h4 Latest posts
							hr
							ul
								each post in data.posts
									li.col-md-12.col-sm-4
										.single-post
											a(href='/blog/post/' + post.slug)
												if post.image.url && post.image.url.length
													img(src=post._.image.fit(300,300), alt='post-img').img-responsive
												h4!= post.title
											span #{post._.publishedDate.format('MMMM Do, YYYY')}
						// Recent posts end
						.clearfix
						.blog-catagory
							h4 Blog categories
							ul
								li
									a(href='/blog/all', class=!data.category ? 'active' : false)
										i.fa.fa-angle-right
										|  All Categories
										span.badge= data.allCount
								each cat in data.categories
									li
										a(href='/blog/' + cat.key, class=data.category && data.category.id == cat.id ? 'active' : false)
											i.fa.fa-angle-right
											= cat.name
											span.badge= cat.postCount
								// blog catagory end
								.clearfix
								if data.tags.length
									.right-tags
										h4 Tags
										hr
										.footer_menu.tags
											each tag in data.tags
												a(href='/blog/all/' + tag.name)= tag.name
					// blog sidebar end
				// sidebar end
		// Portfolio item row end