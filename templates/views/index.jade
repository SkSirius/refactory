	// bLOG Start
	section#blog
	.container
		.row
			.col-md-12.col-sm-12.col-xs-12
				.feature_header.text-center
					h3.feature_title
						a(href='/blog/all') 
							| Our 
							b Blog
					h4.feature_sub Watch latest tech trends. Stay informed. Listen to the voice of professionals.
					.divider
			// Col-md-12 End
		.row
			.blog-timeline
				#owl-blog.owl-carousel.owl-theme
					each post in data.posts.results
						.item
							.single_blog
								.post_img.text-center
									a(href='/blog/post/' + post.slug)
										if post.image && post.image.url.length > 0
											img(src=post._.image.fit(300,300)).img-responsive
										else
											img(src='http://res.cloudinary.com/sksirius/image/upload/v1459449193/pexels-photo_hfvvtf.jpg')
									.post-date
										span #{post._.publishedDate.format('DD')}
										|  #{post._.publishedDate.format('MMMM')}
								a(href='/blog/post/' + post.slug)
									h4= post.title
								ul.list-inline
									li
										i.fa.fa-pencil
										|  #{post.author.name.first}
								p!= post.content.brief
			// blog Timeline End
	// bLOG End
	section#contact
		.container
			.row
				.col-md-12.col-sm-12.col-xs-12
					.feature_header.text-center
						h3.feature_title
							| Keep In 
							b touch
						h4.feature_sub Have an idea? Need some extra help? Contact us and let's jump into details.
						.divider
			.row
				if enquirySubmitted
					.col-md-12.text-center
						h4 Thanks for getting in touch. We will contact you shortly.
				else
					.contact_full
						form(action='/#contact', method='post')
							.validation-summary.text-center
								if validationErrors.name
									label.has-error.text-danger
										| Name is required. 
								if validationErrors.email
									label.has-error.text-danger
										| Email is required. 
								if validationErrors.message
									label.has-error.text-danger
										| Message is required. 
							.col-md-6.left
								.left_contact
									input(type='hidden', name='action', value='/#contact')
									.form-level.form-group(class=validationErrors.name ? 'has-error' : null)
										input#name.form-control.input-block(name='name.full', value=formData['name.full'], placeholder='Name', type='text')
										span.form-icon.fa.fa-user
									.form-level.form-group(class=validationErrors.email ? 'has-error' : null)
										input#mail.form-control.input-block(name='email', value=formData.email, placeholder='Email', type='email')
										span.form-icon.fa.fa-envelope-o
									.form-level.form-group
										input#phone.form-control.input-block(name='phone', value=formData.phone, placeholder='Phone (optional)', type='text')
										span.form-icon.fa.fa-phone
							.col-md-6.right
								.form-level.form-group(class=validationErrors.message ? 'has-error' : null)
									textarea#messege.form-control.textarea-block(name='message', rows='7', placeholder='message')= formData.message
									span.form-icon.fa.fa-pencil
							.col-md-12.text-center
								button(type='submit').btn.btn-main.featured Submit Now